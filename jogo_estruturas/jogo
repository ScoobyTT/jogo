                    if (raiz) exibirCena(raiz);
                    else cout << "Arvore nao construida." << endl;
                    break;
                case 2:
                    cout << "\n--- Listando Arvore em Ordem (Pre-ordem) ---" << endl;
                    listarArvoreEmOrdem(raiz); // Pode implementar pre-ordem, in-ordem, pos-ordem
