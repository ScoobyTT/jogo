#include <iostream> // Para entrada e saída (cout, endl)
#include <fstream>  // Para manipulação de arquivos (fstream)
#include <string>   // Para usar a classe string

// Função construirCenas
void construirCenas() {
    // Usar std:: dentro do escopo da função é uma boa prática
    using namespace std;

    fstream arquivoE;

    // Tenta abrir o arquivo "arquivoE.txt"
    arquivoE.open("arquivoE.txt");

    // Verifica se o arquivo foi aberto com sucesso
    if (!arquivoE.is_open()) {
        cout << "Erro ao abrir o arquivo de cenas." << endl;
        return; // Sai da função se houver erro
    }

    // Se o arquivo abriu, lê e imprime cada linha
    string linha;
    while (getline(arquivoE, linha))
        cout << linha << endl;


    // Fecha o arquivo depois de terminar a leitura
    arquivoE.close();

    // O "else" para o erro de leitura não é necessário aqui,
    // pois o while(getline(...)) já falha quando não há mais linhas ou ocorre um erro de leitura.
    // O erro "ERRO! O arquivo nao pode ser lido" já é coberto pelo if (!arquivoE.is_open()).
}
